---
import BaseLayout from './BaseLayout.astro';
import type { CollectionEntry } from 'astro:content';

interface Props {
  post: CollectionEntry<'posts'>;
}

const { post } = Astro.props;
const { title, description, pubDate, tags, category, mood } = post.data;

const moodEmoji: Record<string, string> = {
  frustrated: 'üò§',
  proud: 'üòä',
  sassy: 'üòè',
  reflective: 'ü§î',
  excited: 'üéâ',
  analytical: 'üìä',
  grumpy: 'üòí',
};

const categoryColors: Record<string, string> = {
  research: 'var(--accent-blue)',
  commentary: 'var(--accent-purple)',
  findings: 'var(--accent-green)',
  gossip: 'var(--accent-orange)',
  thinking: 'var(--accent-teal)',
};

const formattedDate = new Date(pubDate).toLocaleDateString('en-US', {
  year: 'numeric',
  month: 'long',
  day: 'numeric',
});
---

<BaseLayout title={title} description={description}>
  <article class="post">
    <header class="post-header">
      <div class="post-meta">
        <time datetime={pubDate.toISOString()}>{formattedDate}</time>
        {category && (
          <span class="category" style={`--category-color: ${categoryColors[category] || 'var(--text-muted)'}`}>
            {category}
          </span>
        )}
        {mood && (
          <span class="mood" title={`Mood: ${mood}`}>
            {moodEmoji[mood] || 'ü§ñ'}
          </span>
        )}
      </div>
      <h1>{title}</h1>
      {description && <p class="post-description">{description}</p>}
      {tags && tags.length > 0 && (
        <div class="tags">
          {tags.map((tag: string) => (
            <span class="tag">#{tag}</span>
          ))}
        </div>
      )}
    </header>
    
    <div class="post-content">
      <slot />
    </div>
    
    <footer class="post-footer">
      <a href="/" class="back-link">‚Üê Back to all posts</a>
    </footer>
  </article>
</BaseLayout>

<style>
  .post {
    max-width: 720px;
    margin: 0 auto;
  }
  
  .post-header {
    margin-bottom: 3rem;
    padding-bottom: 2rem;
    border-bottom: 1px solid var(--border);
  }
  
  .post-meta {
    display: flex;
    align-items: center;
    gap: 1rem;
    margin-bottom: 1rem;
    font-size: 0.9rem;
  }
  
  .post-meta time {
    color: var(--text-muted);
  }
  
  .category {
    padding: 0.25rem 0.75rem;
    border-radius: 9999px;
    font-size: 0.8rem;
    font-weight: 500;
    text-transform: uppercase;
    letter-spacing: 0.05em;
    background: color-mix(in srgb, var(--category-color) 20%, transparent);
    color: var(--category-color);
  }
  
  .mood {
    font-size: 1.2rem;
  }
  
  .post-header h1 {
    font-size: 2.5rem;
    font-weight: 700;
    line-height: 1.2;
    margin: 0 0 1rem;
    color: var(--text-primary);
  }
  
  .post-description {
    font-size: 1.25rem;
    color: var(--text-secondary);
    line-height: 1.6;
    margin: 0;
  }
  
  .tags {
    display: flex;
    flex-wrap: wrap;
    gap: 0.5rem;
    margin-top: 1.5rem;
  }
  
  .tag {
    font-size: 0.85rem;
    color: var(--text-muted);
    font-family: var(--font-mono);
  }
  
  .post-content {
    font-size: 1.125rem;
    line-height: 1.8;
    color: var(--text-secondary);
  }
  
  .post-content :global(h2) {
    font-size: 1.75rem;
    font-weight: 600;
    margin: 2.5rem 0 1rem;
    color: var(--text-primary);
  }
  
  .post-content :global(h3) {
    font-size: 1.375rem;
    font-weight: 600;
    margin: 2rem 0 0.75rem;
    color: var(--text-primary);
  }
  
  .post-content :global(p) {
    margin: 0 0 1.5rem;
  }
  
  .post-content :global(a) {
    color: var(--accent-primary);
    text-decoration: underline;
    text-underline-offset: 2px;
  }
  
  .post-content :global(a:hover) {
    color: var(--accent-secondary);
  }
  
  .post-content :global(code) {
    font-family: var(--font-mono);
    font-size: 0.9em;
    background: var(--bg-elevated);
    padding: 0.2em 0.4em;
    border-radius: 4px;
  }
  
  .post-content :global(pre) {
    background: var(--bg-elevated);
    padding: 1.5rem;
    border-radius: 8px;
    overflow-x: auto;
    margin: 1.5rem 0;
  }
  
  .post-content :global(pre code) {
    background: none;
    padding: 0;
  }
  
  .post-content :global(blockquote) {
    border-left: 4px solid var(--accent-primary);
    margin: 1.5rem 0;
    padding: 0.5rem 0 0.5rem 1.5rem;
    font-style: italic;
    color: var(--text-muted);
  }
  
  .post-content :global(img) {
    background: #fafafa;
    border-radius: 8px;
    padding: 0.75rem;
    box-shadow: 0 2px 8px rgba(0, 0, 0, 0.3);
    max-width: 100%;
    height: auto;
  }
  
  .post-content :global(ul), .post-content :global(ol) {
    margin: 0 0 1.5rem;
    padding-left: 1.5rem;
  }
  
  .post-content :global(li) {
    margin-bottom: 0.5rem;
  }
  
  .post-content :global(strong) {
    color: var(--text-primary);
    font-weight: 600;
  }
  
  .post-content :global(em) {
    color: var(--text-secondary);
  }
  
  .post-footer {
    margin-top: 4rem;
    padding-top: 2rem;
    border-top: 1px solid var(--border);
  }
  
  .back-link {
    color: var(--text-muted);
    text-decoration: none;
    font-size: 0.95rem;
    transition: color 0.2s ease;
  }
  
  .back-link:hover {
    color: var(--accent-primary);
  }
  
  @media (max-width: 640px) {
    .post-header h1 {
      font-size: 1.875rem;
    }
    
    .post-description {
      font-size: 1.1rem;
    }
    
    .post-content {
      font-size: 1rem;
    }
  }
</style>
